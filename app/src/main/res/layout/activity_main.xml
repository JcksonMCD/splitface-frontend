<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <data>-->
<!--        <variable name="clickHandler" type="com.northcoders.recordshopapp.ui.mainactivity.MainActivityClickHandler"/>-->
<!--    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.mainactivity.MainActivity">


        <TextView android:id="@+id/mainHeader"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:text="@string/tatooine"
                  android:textColor="@color/white"
                  android:paddingHorizontal="20dp"
                  android:paddingTop="10dp"
                  android:background="@color/material_dynamic_primary20"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout android:id="@+id/searchBarLinearLayout"
                      android:layout_width="match_parent"
                      android:layout_height="75dp"
                      android:paddingHorizontal="15dp"
                      android:paddingVertical="10dp"
                      android:background="@color/material_dynamic_primary20"
                      app:layout_constraintTop_toBottomOf="@id/mainHeader"
                      app:layout_constraintBottom_toTopOf="@id/recyclerViewLayout"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent">

            <SearchView android:id="@+id/searchViewAlbumYear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/search_view_background"
                        android:iconifiedByDefault="false"
                        android:queryHint="Find artists..."/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerViewLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="0dp"
                                                   android:paddingTop="5dp"
                                                   android:foregroundGravity="center_horizontal"
                                                   android:background="@color/white"
                                                   app:layout_constraintTop_toBottomOf="@id/searchBarLinearLayout"
                                                   app:layout_constraintBottom_toTopOf="@id/bottomNavBarView"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@+id/bottomNavBarView"
                                                                               android:layout_width="match_parent"
                                                                               android:layout_height="wrap_content"
                                                                               android:background="@android:color/transparent"
                                                                               app:layout_constraintTop_toBottomOf="@id/recyclerViewLayout"
                                                                               app:layout_constraintBottom_toBottomOf="parent"
                                                                               app:layout_constraintStart_toStartOf="parent"
                                                                               app:layout_constraintEnd_toEndOf="parent"
                                                                               app:menu="@menu/bottom_nav_menu">
            </com.google.android.material.bottomnavigation.BottomNavigationView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>